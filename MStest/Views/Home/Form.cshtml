@{
    Layout = "_Layout";
}

<section class="section-form">
    <div class="container">
        <div class="section-title">
            <h2>
                <span class="h2">02</span> Medicine
            </h2>
        </div>
        <div class="sectionForm">
            <h3>
                Enter the name and times of medicine of talking your dose, and we will send you a notification to
                remind you of it
            </h3>
            <form action="">
                <div id="first_form">

                    <div class="row" id="row">
                        <div class="col-5">
                            <label for="">Medicine Name</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-5">
                            <label for="">Times per day</label>
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-2">
                            <label for=""></label>
                            <button class="btn btn-plus" onclick="addNewVlaue(event)" type="button"> + </button>
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-right mt-3">
                        <button type="button" class="btn btn-outline-primary px-4" onclick="hidefirstform()">Send</button>
                    </div>
                </div>
                <div id="sec_form" class="d-none">

                    <div class="row">
                        <div class="col-sm-4">
                            <label for="">1st Time</label>
                            <input type="time" class="form-control">
                        </div>
                        <div class="col-sm-4">
                            <label for="">2nd Time</label>
                            <input type="time" class="form-control">
                        </div>
                        <div class="col-sm-4">
                            <label for="">3rd Time</label>
                            <input type="time" class="form-control">
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-right mt-3">
                        <button type="button" class="btn btn-outline-danger px-4" style="margin-right: 2%;" onclick="showfirstform()">Previous</button>
                        <button type="button" class="btn btn-outline-primary px-4">Send</button>
                    </div>
                </div>

            </form>
        </div>
    </div>
</section>
