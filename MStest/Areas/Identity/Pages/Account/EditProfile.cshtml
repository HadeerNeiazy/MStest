@page
@model MStest.Areas.Identity.Pages.Account.EditProfileModel
@{
}
<div class="profile text-center">
    <div class="container">
        <form action="" class="w-75 mt-4 m-auto text-right">
            <label for="uploadPhoto" class="d-block text-center">
                <img src="~/img/user.svg" class="img-fluid" id="showImage" alt="">
            </label>
            <input type="file" name="photo" id="uploadPhoto" />
            <h2 class="section-title" style="margin-bottom: 4%;">Edit My Profile</h2>

            <div class="mt-4">
                <label for="" class="d-block mb-4">Name</label>
                <input type="text" class="form-control d-block">
            </div>
            <div class="mt-4">
                <label for="" class="d-block mb-4">E-mail</label>
                <input type="email" class="form-control d-block">
            </div>
            <div class="mt-4">
                <div class="row">
                    <div class="col-sm-4">
                        <label for="" class="d-block mb-4">Old Password</label>
                        <input type="password" class="form-control d-block">
                    </div>
                    <div class="col-sm-4">
                        <label for="" class="d-block mb-4">Password</label>
                        <input type="password" class="form-control d-block">
                    </div>
                    <div class="col-sm-4">
                        <label for="" class="d-block mb-4">Password Confirmation</label>
                        <input type="password" class="form-control d-block">
                    </div>
                </div>
            </div>
            <div class="input-group mt-4">
                <button type="submit" class="btn btn-update rounded-4 w-25 ml-auto">Save</button>
            </div>
        </form>
    </div>
</div>